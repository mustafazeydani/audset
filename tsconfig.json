{
"compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "declaration": true, 
    "resolveJsonModule": true,
    "declarationDir": "dist/types"
  },
  "include": ["src/**/*"], // Include everything in the src folder
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist folder
}
